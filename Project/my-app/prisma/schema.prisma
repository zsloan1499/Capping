generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(dbgenerated("concat('usr_',replace(cast(gen_random_uuid() as text), '-',''))"))
  email String @unique
  fname String?
  lname String?
  picture?
  createdAt DateTime @default(now())
  updatedAt SateTime @updatedAt
}